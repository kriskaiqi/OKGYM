# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=okgym
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=1d
SALT_ROUNDS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
CACHE_ENABLED=true
CACHE_NAMESPACE=okgym
CACHE_DEFAULT_TTL=3600
CACHE_TTL_EXERCISE=86400
CACHE_TTL_SEARCH=900
CACHE_TTL_POPULAR=1800
CACHE_TTL_USER=300
CACHE_TTL_WORKOUT_PLAN=3600
CACHE_TTL_REFERENCE=172800
CACHE_LOG_HIT_MISS=false
CACHE_SLOW_THRESHOLD=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Media Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Frontend URL
FRONTEND_URL=http://localhost:3000 